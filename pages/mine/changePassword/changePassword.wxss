/* pages/mine/changePassword/changePassword.wxss */
.container{
    width: 100vw;
    height: 100vh;
    background-color: #f9f7f2;
    padding: 35rpx;
    font-size: 28rpx;
}
.oldPassword{
    height: 70rpx;
    margin-bottom: 30rpx;
}
.oldPassword-l{
    background-color: #fff;
    border-radius: 10rpx;
    border: 1px solid #f1f1f1;
    padding: 0 15rpx;
    flex: 1;
    margin-right: 30rpx;
    height: 70rpx;
}
input {
    flex: 1;
}
.oldPassword-r image {
    width: 32rpx;
    height: 32rpx;
    display: block;
}
.tip{
    color: #888888;
}
.forget{
    color: #ff5800;
    font-size: 30rpx;
}
button{
    margin-top: 50rpx;
    width: 680rpx;
    height: 80rpx;
    border-radius: 20rpx;
    font-size: 32rpx;
    color: #ffffff;
    background:linear-gradient(to right,#ff8f00,#ff5100);
}