/* pages/index/repairDetail/repairDetail.wxss */
.container{
    width: 100%;
    min-height: 100vh;
    background-color: #eee;
    padding-bottom: 120rpx;
}
.repair-line{
    font-size: 26rpx;
    color: #000;
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 4rpx;
    width: 100vw;
    min-height: 92rpx;
    align-items: center;
}
.progress-info-bg{
    background-color: #ddd;
    height: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
    margin-bottom: 10rpx;
    position: relative;
}
.progress-tune{
    width: 1rpx;
    height: 20rpx;
    background:-webkit-gradient(linear, 0% 0%, 100% 0%, from(#ff8f00), to(#ff5800));
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    border-radius: 10rpx;
}
.progress{
    font-size: 22rpx;
    color: #999;
}
.progress-info-status{
    color: #ff5800;
}
.repair-line-l image {
    margin-right: 10rpx;
    width: 32rpx;
    height: 32rpx;
    display: block;
}
.repair-line-l{
    width: 160rpx;
}
.repair-line-r {
    flex: 1;
}
input {
    /* width: 100%; */
}
textarea{
    width: 100%;
    height: 80rpx;
}
.picker{
    flex: 1;
}
.picker-r{
    margin-right: 10rpx;
}
.picker-r > image {
    width: 32rpx;
    height: 32rpx;
    display: block;
}
.upload image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}
.submit{
    background: -webkit-gradient(linear, 0% 0%, 100% 0%, from(#ff8f00), to(#ff5800));
    position: fixed;
    bottom: 20rpx;
    left: 20rpx;
    width: 100%;
    color: #ffffff;
    border-top: 1px solid #dddddd;
    z-index: 2;
    width: 710rpx;
    border-radius: 20rpx;
}
.phone{
    color: #008de6;
}