.container{
    width: 100%;
    min-height: 100vh;
    background-color: #eee;
}
.tab {
    width: 100%;
    height: 76rpx;
    font-size: 30rpx;
    color: #000;
    background-color: #fff;
}
.tab-item {
    flex: 1;
    height: 76rpx;
    border-bottom: 2px solid #eee;
}
.select{
    color: #ff5800;
    border-bottom: 2px solid #ff5800;
}
.content {
    font-size: 28rpx;
    color: #000;
    margin-bottom: 20rpx;
}
.content-title{
    padding: 20rpx;
    background-color: #fff;
}
.content-title-l > image{
    width: 32rpx;
    height: 32rpx;
    display: block;
}
.content-title-r{
    color: #999999;
}
.content-ct {
    padding: 20rpx;
}
.content-ct-l image {
    width: 160rpx;
    height: 160rpx;
    display: block;
    margin-top: 10rpx;
    margin-right: 20rpx;
}
.content-ct-r{
    align-items: flex-start;
}
.content-ct-r-t{
    margin-bottom: 20rpx;
}
.adr{
    color: #999;
}
.content-status {
    background-color: #fff;
    padding: 20rpx;
    font-size: 22rpx;
    color: #999;
}